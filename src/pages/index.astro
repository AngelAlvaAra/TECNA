---

import Header from '../components/header/Header.astro';
import HeroSection from '../components/HeroSection/HeroSection.astro';
import MisionVision from '../components/MisionVision/MisionVision.astro';
import ProductSection from '../components/ProductSection/ProductSection.astro';
import UsSection from '../components/UsSection/UsSection.astro';
import Values from '../components/values/Values.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="TECNA">
	<Header/>
	<HeroSection/>
	<UsSection/>
	<MisionVision/>
	<div class=" bg-[#852780] py-[50px] flex-col px-[10px]">
		<div class="flex justify-center items-center mb-[45px]">
			<h1 class="font-montserratBold text-[35px] text-white">Nuestros Servicios</h1>
		</div>
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-0 place-items-center px-[150px]">
			<ProductSection/>
		</div>
	</div>
	<div  class="py-[50px] flex-col sm:px-[150px] px-[10px] ">
		<div class="flex justify-center items-center mb-[45px]">
			<h1 class="font-montserratBold text-[35px]">Nuestros Valores</h1>
		</div>
		<Values/>
	</div>
	
</Layout>
